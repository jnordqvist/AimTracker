@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel
<body>


    <div class="container-last-session">

        <div class="last-session-top">
            <div class="last-session-date">
                <h3>Last session </h3> <h2>@Model.Athlete.TrainingSession.FirstOrDefault().Date</h2>
            </div>
        </div>
        <div class="last-session-middle">
            <div class="last-session-percentage">
                <p>Hits: @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</p>
            </div>
            <div class="pie-chart-shooting">
                <svg viewBox="0 0 36 36" style="width: 200px; height: 200px;">
                    <path fill="none" stroke="#eee" stroke-width=1
                          d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <path class="circle"
                          stroke-dasharray="@Model.GetSessionTotalHitPercentageRounded(Model.Athlete.TrainingSession.FirstOrDefault()), 100"
                          fill="none"
                          stroke-width="2"
                          stroke-linecap="round"
                          style="stroke: #00e6e6;
                        animation: progress 1s ease-out forwards"
                          d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <text x="18" y="20.35" class="pie-chart-percentage">@Model.GetSessionTotalHitPercentage(Model.Athlete.TrainingSession.FirstOrDefault())</text>
                </svg>
            </div>
        </div>
        <div class="last-session-bottom">
            <div class="last-session-stance">
                <h3>@Model.Athlete.TrainingSession.FirstOrDefault().Series.Where(x => x.Id == 1).FirstOrDefault().Stance</h3>
            </div>
            <div class="last-session-pulse"> <i class="fa fa-heartbeat"></i> </div>
            <div class="last-session-weather"><i class="fa fa-sun"></i></div>


            <div class="last-session-date">
                <h3>@Model.Athlete.TrainingSession.FirstOrDefault().Date</h3>
            </div>
            <div class="last-session-stance">
                <h3>@Model.Athlete.TrainingSession.FirstOrDefault().Series.Where(x => x.Id == 1).FirstOrDefault().Stance</h3>
            </div>
            <div class="last-session-percentage ">
                <h4>Träffpercent: @Model.GetSessionTotalHitPercentage(Model.Athlete.TrainingSession.FirstOrDefault())</h4>
                <h4>Träffar: @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</h4>

            </div>
        </div>

 


        <div class="container-other-sessions">
            <div class="items-other-session">
                <h4 class="date-time">2022-01-27</h4>
                <h4 class="hit-rate ">Träffpercent: </h4>
            </div>
            <div class="items-other-session">
                <h4 class="date-time">2022-01-27</h4>
                <h4 class="hit-rate ">70%:</h4>
            </div>
        </div>
        <div class="container-other-sessions">
            <div class="items-other-session">
                <h4 class="date-time">2022-01-27</h4>
                <h4 class="hit-rate ">60%</h4>
            </div>
            <div class="items-other-session">
                <h4 class="date-time">2022-01-27</h4>
                <h4 class="hit-rate ">90%</h4>
            </div>
        </div>

    </div>

    <div class="flex-container-home">

        @foreach (var trainingSession in @Model.allTrainingSessions)
        {
            <section class="training-session">
                <h1>@trainingSession.Date</h1>
                <h3>Location</h3>
                <p>@trainingSession.Location</p>
            </section>
        }
    </div>

</body>
