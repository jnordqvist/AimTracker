@{
    ViewData["Title"] = "Home Page";
}
@model HomeViewModel

<div id="container-home-content">
    <div class="container-last-session">
        <div class="last-session-top">
            <div class="last-session-date">
                <h2>Last session </h2>
                <h3>@Model.Athlete.TrainingSession.FirstOrDefault().Date</h3>
                <h3>@Model.weather.Current.Temp °C</h3>
            </div>
        </div>
        <div id="flex-container-last-session">
            <div class="last-session-middle">
                <h3 id="hits">Hits: <br /> @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</h3>
                <svg viewBox="0 0 36 36" style="width: 100px; height: 100px;">
                    <path fill="none" stroke="#eee" stroke-width=1
                          d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <path class="circle"
                          stroke-dasharray="@Model.GetSessionTotalHitPercentageRounded(Model.Athlete.TrainingSession.FirstOrDefault()), 100"
                          fill="none"
                          stroke-width="2"
                          stroke-linecap="round"
                          style="stroke: #00e6e6;
                        animation: progress 1s ease-out forwards"
                          d="M18 2.0845
                                a 15.9155 15.9155 0 0 1 0 31.831
                                a 15.9155 15.9155 0 0 1 0 -31.831" />
                    <text x="18" y="20.35" class="pie-chart-percentage">@Model.GetSessionTotalHitPercentage(Model.Athlete.TrainingSession.FirstOrDefault())</text>
                </svg>
            </div>
            <div class="last-session-bottom">
                <div class="last-session-stance">
                    <h3 id="stance">Stance: <br /> @Model.Athlete.TrainingSession.FirstOrDefault().Series.Where(x => x.Id == 1).FirstOrDefault().Stance</h3>
                </div>
                <h3 id="average-pulse">Average Pulse:</h3>
                <div class="last-session-pulse"> <i class="fa fa-heartbeat"></i> </div>
                <div class="last-session-weather"><i class="fa fa-sun"></i></div>
            </div>
        </div>
        <h3 id="previous-sessions">Previous Sessions</h3>
        <div class="container-other-sessions">
            <div class="items-other-session">
                <h4 class="date-time">@Model.Athlete.TrainingSession.FirstOrDefault().Date</h4>
                <h4 class="hit-rate ">Hits: @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</h4>
            </div>
            <div class="items-other-session">
                <h4 class="date-time">@Model.Athlete.TrainingSession.FirstOrDefault().Date</h4>
                <h4 class="hit-rate ">Hits: @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</h4>
            </div>

            <div class="items-other-session">
                <h4 class="date-time">@Model.Athlete.TrainingSession.FirstOrDefault().Date</h4>
                <h4 class="hit-rate ">Hits: @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</h4>
            </div>
            <div class="items-other-session">
                <h4 class="date-time">@Model.Athlete.TrainingSession.FirstOrDefault().Date</h4>
                <h4 class="hit-rate ">Hits: @Model.GetTotalNumOfHits(Model.Athlete.TrainingSession.FirstOrDefault()) / @Model.GetTotalNumOfShots(Model.Athlete.TrainingSession.FirstOrDefault())</h4>
            </div>
        </div>
    </div>
</div>

